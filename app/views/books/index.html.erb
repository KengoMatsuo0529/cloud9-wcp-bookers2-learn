
<h1>User info</h1>

<table>
  <tr>
    name <%= @user.name %>
  </tr>
  <tr>
    introduction <%= @user.introduction %> 
  </tr>
</table>

<%= link_to "a", edit_user_path(@user) %>


<h1>New Book</h1>

<%= form_with model:@book, local:true do |f| %>
<label>Title</label>
<%= f.text_field :title %>
<label>Opinion</label>
<%= f.text_field :body %>
<%= f.submit "Create Book" %>
<% end %>


<h1>Books</h1>

<table>
  <% @books.each do |book| %>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <tr>
    <td>
      <a><%= book.title %></a>
    </td>
    <td>
      <%= book.body %>
    </td>
  </tr>
  <% end %>
</table>