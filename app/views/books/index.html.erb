


<h1>New Book</h1>

<%= form_with model:@book, local:true do |f| %>
<label>Title</label>
<%= f.text_field :title %>
<label>Opinion</label>
<%= f.text_field :body %>
<%= f.submit "Create Book" %>
<% end %>


<h1>Books</h1>

<table>
  <% @books.each do |book| %>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <tr>
    <td>
      <%= book.title %>
    </td>
    <td>
      <%= book.body %>
    </td>
  </tr>
  <% end %>
</table>